{
  "$schema": "http://json-schema.org/schema",
  "$ref": "#/definitions/WidgetData",
  "definitions": {
    "WidgetData": {
      "properties": {
        "tags": { "$ref": "#/definitions/WidgetTagArray" },
        "parameters": {
          "patternProperties": { ".*": { "$ref": "#/definitions/WidgetType" } }
        },
        "body": { "$ref": "#/definitions/WidgetValue" }
      },
      "required": ["tags", "parameters", "body"]
    },

    "WidgetTag": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" }, "minItems": 1 }
      ]
    },
    "WidgetTagArray": {
      "type": "array",
      "items": { "$ref": "#/definitions/WidgetTag" },
      "minItems": 1
    },

    "AnyType": {
      "properties": { "type": { "const": "any" } },
      "required": ["type"],
      "additionalProperties": false
    },
    "VoidType": {
      "properties": { "type": { "const": "void" } },
      "required": ["type"],
      "additionalProperties": false
    },
    "LiteralType": {
      "properties": {
        "type": { "enum": ["boolean", "number", "string", "symbol"] }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "ArrayType": {
      "properties": {
        "type": { "const": "array" },
        "item": { "$ref": "#/definitions/WidgetType" }
      },
      "required": ["type", "item"],
      "additionalProperties": false
    },
    "TupleType": {
      "properties": {
        "type": { "const": "array" },
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/WidgetType" }
        }
      },
      "required": ["type", "items"],
      "additionalProperties": false
    },
    "ObjectType": {
      "properties": {
        "type": { "const": "object" },
        "props": {
          "patternProperties": { ".*": { "$ref": "#/definitions/WidgetType" } }
        }
      },
      "required": ["type", "props"],
      "additionalProperties": false
    },
    "FunctionType": {
      "properties": {
        "type": { "const": "function" },
        "arguments": {
          "type": "array",
          "items": { "$ref": "#/definitions/WidgetType" }
        },
        "return": { "$ref": "#/definitions/WidgetType" }
      },
      "required": ["type", "arguments", "return"],
      "additionalProperties": false
    },
    "UnionType": {
      "properties": {
        "type": { "const": "union" },
        "left": { "$ref": "#/definitions/WidgetType" },
        "right": { "$ref": "#/definitions/WidgetType" }
      },
      "required": ["type", "left", "right"],
      "additionalProperties": false
    },
    "WidgetType": {
      "oneOf": [
        { "$ref": "#/definitions/AnyType" },
        { "$ref": "#/definitions/VoidType" },
        { "$ref": "#/definitions/LiteralType" },
        { "$ref": "#/definitions/ArrayType" },
        { "$ref": "#/definitions/TupleType" },
        { "$ref": "#/definitions/ObjectType" },
        { "$ref": "#/definitions/FunctionType" },
        { "$ref": "#/definitions/UnionType" }
      ]
    },

    "WidgetDirect": {
      "properties": {
        "direct": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "number" },
            { "type": "string" }
          ]
        }
      },
      "required": ["direct"],
      "additionalProperties": false
    },
    "WidgetTuple": {
      "properties": {
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/WidgetValue" }
        }
      },
      "required": ["items"],
      "additionalProperties": false
    },
    "WidgetShape": {
      "properties": {
        "shape": {
          "patternProperties": { ".*": { "$ref": "#/definitions/WidgetValue" } }
        }
      },
      "required": ["shape"],
      "additionalProperties": false
    },
    "WidgetParameter": {
      "properties": { "parameter": { "type": "string" } },
      "required": ["parameter"],
      "additionalProperties": false
    },
    "WidgetProperty": {
      "properties": {
        "target": { "$ref": "#/definitions/WidgetValue" },
        "property": { "type": "string" }
      },
      "required": ["target", "property"],
      "additionalProperties": false
    },
    "WidgetMember": {
      "properties": {
        "target": { "$ref": "#/definitions/WidgetValue" },
        "member": { "$ref": "#/definitions/WidgetValue" }
      },
      "required": ["target", "member"],
      "additionalProperties": false
    },
    "WidgetComparison": {
      "properties": {
        "operator": {
          "enum": [
            "equals",
            "greaterThan",
            "lessThan",
            "greaterThanEquals",
            "lessThanEquals"
          ]
        },
        "left": { "$ref": "#/definitions/WidgetValue" },
        "right": { "$ref": "#/definitions/WidgetValue" }
      },
      "required": ["operator", "left", "right"],
      "additionalProperties": false
    },
    "WidgetCondition": {
      "properties": {
        "condition": { "$ref": "#/definitions/WidgetValue" },
        "ifTrue": { "$ref": "#/definitions/WidgetValue" },
        "ifFalse": { "$ref": "#/definitions/WidgetValue" }
      },
      "required": ["condition", "ifTrue", "ifFalse"],
      "additionalProperties": false
    },
    "WidgetMap": {
      "properties": {
        "target": { "$ref": "#/definitions/WidgetValue" },
        "argument": { "type": "string" },
        "map": { "$ref": "#/definitions/WidgetValue" }
      },
      "required": ["target", "argument", "map"],
      "additionalProperties": false
    },
    "WidgetCompute": {
      "properties": {
        "argument": { "type": "string" },
        "compute": { "$ref": "#/definitions/WidgetValue" }
      },
      "required": ["argument", "compute"],
      "additionalProperties": false
    },
    "WidgetDefer": {
      "properties": {
        "defer": { "$ref": "#/definitions/WidgetValue" }
      },
      "required": ["defer"],
      "additionalProperties": false
    },
    "WidgetRef": {
      "properties": {
        "tags": { "$ref": "#/definitions/WidgetTagArray" },
        "parameters": {
          "patternProperties": { ".*": { "$ref": "#/definitions/WidgetValue" } }
        }
      },
      "required": ["tags", "parameters"],
      "additionalProperties": false
    },
    "WidgetValue": {
      "oneOf": [
        { "$ref": "#/definitions/WidgetDirect" },
        { "$ref": "#/definitions/WidgetTuple" },
        { "$ref": "#/definitions/WidgetShape" },
        { "$ref": "#/definitions/WidgetParameter" },
        { "$ref": "#/definitions/WidgetProperty" },
        { "$ref": "#/definitions/WidgetMember" },
        { "$ref": "#/definitions/WidgetComparison" },
        { "$ref": "#/definitions/WidgetCondition" },
        { "$ref": "#/definitions/WidgetMap" },
        { "$ref": "#/definitions/WidgetCompute" },
        { "$ref": "#/definitions/WidgetDefer" },
        { "$ref": "#/definitions/WidgetRef" }
      ]
    }
  }
}
